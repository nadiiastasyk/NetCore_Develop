@using WebSocketsExample.ViewModels
@model UserJoinChatViewModel
@{
    ViewData["Title"] = "Chat";
}

<body>
    <h3>Stream Chat</h3>

    <form id="userForm" asp-controller="Chat" asp-action="Index">
        <label asp-for="FirstName"></label><br>
        <input asp-for="FirstName" type="text" /><br>

        <label asp-for="LastName"></label><br>
        <input asp-for="LastName" type="text" /><br>


        <button id="joinChat" type="button" onclick="OpenConnection()">Join chat</button><br>
    </form>

        <br><br><input id="sendmessage" type="button" hidden value="Send message" />
        <input id="messageTextInput" type="text" hidden/>
        <ul id="chatMessages"></ul>

        <script src="~/js/chatstream.js"></script>
</body>